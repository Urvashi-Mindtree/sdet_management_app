
<html>
<title>New Trainee</title>

<body>
<div class="container" >
<%= form_with(model: trainee, local: true, html: {class: "form-horizontal"}) do |form| %>
  <h3>New Trainee Form</h3>
  <% if trainee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(trainee.errors.count, "error") %> prohibited this trainee from being saved:</h2>

      <ul>
      <% trainee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>" color: orange><%= value %></div>
  <% end %>

    <div class="form-group">
      <label class="control-label col-sm-4">Trainee Name:</label>
      <div class="col-sm-5">
        <%= form.text_field :trainee_name,class: "form-control",placeholder:"Enter Trainee Name" %>
      </div>
    </div>
	<div class="form-group">
      <label class="control-label col-sm-4">Course Id:</label>
      <div class="col-sm-5">
        <%=form.text_field  :course_id,class: "form-control", :value => @trainee.course_id ,:readonly=>true%>
      </div>
    </div>
	<div class="form-group">
      <label class="control-label col-sm-4">Course Start Date:</label>
      <div class="col-sm-5">
        <%= form.text_field :start_date ,class: "form-control", :value =>@trainee.start_date,:readonly=>true %>
      </div>
    </div>
	<div class="form-group">
      <label class="control-label col-sm-4">Course End Date:</label>
      <div class="col-sm-5">
        <%= form.text_field :end_date ,class: "form-control", :value =>@trainee.end_date,:readonly=>true %>
      </div>
    </div>
	<div class="form-group">
      <label class="control-label col-sm-4">Trainee Email:</label>
      <div class="col-sm-5">
       <%= form.email_field :trainee_email ,class: "form-control",placeholder:"Enter Trainee Email"%>
      </div>
    </div>
	<div class="form-group">
	<label class="control-label col-sm-4">Status:</label>
	<div class="col-sm-5">	
	  <label class="radio-inline">
        <%= form.radio_button :status,"In Progress", :checked => true%>In Progress
      </label>
	  <label class="radio-inline">
	    <%= form.radio_button :status, 'Completed' %> Completed
      </label>
	  </div>
    </div>
	<div class="form-group">
      <label class="control-label col-sm-4">Assign Date:</label>
      <div class="col-sm-5">
       <%= form.date_field :assign_date,class:"form-control" %>
      </div>
    </div>
	<div class="form-group">        
      <div class="col-sm-offset-5 col-sm-2">
        <%= form.submit "Create",class:"btn btn-primary btn-lg btn-block login-button"%>
	  </div>
    </div>

  
<% end %>
<%-# form ends-%>
</form>
<%-# container div ends-%>
</div>
</body>
</html>


